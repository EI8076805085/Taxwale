<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:orientation="vertical"
    app:cardCornerRadius="@dimen/ten"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/ten"

        android:weightSum="1">


        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/thirtydp"
            android:layout_height="@dimen/thirtydp"
            android:layout_gravity="center|left"
            android:layout_margin="@dimen/ten"
            android:src="@drawable/ic_baseline_home_24"
            app:tint="@color/green" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:fontFamily="@font/seguisb"
                android:text="@string/home"
                android:id="@+id/type"
                android:textColor="@color/theme"
                android:textSize="@dimen/tweleve" />


            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                 android:fontFamily="@font/segoeui"
                android:gravity="center_vertical"
                android:maxLength="75"
                android:text="Sector 16 , Rohini , Delhi -110059"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/thirteendp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity=""
                >
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                    android:id="@+id/edit"
                android:fontFamily="@font/metropolis_regular"
                android:text="@string/edit"
                android:textColor="@color/theme"

                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/ten"
                android:textSize="@dimen/tweleve" />

                <TextView
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/twentydp"
                    android:layout_gravity="center|left"
                     android:src="@drawable/delete"
                    android:text="@string/delete"
                    android:textColor="@color/theme" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/lightgrey" />

</androidx.cardview.widget.CardView>